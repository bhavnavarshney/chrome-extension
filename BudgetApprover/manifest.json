{
    "manifest_version":2,
    "version":"1.0",
    "name":"Budget Approver",
    "description":"Tracks and approves the overall spending and alert user if the limit has been exceeded",
    "icons":{
        "16":"icon16.png",
        "48":"icon48.png",
        "128":"icon128.png"
    },
    "browser_action": {
        "default_icon":"icon16.png",
        "default_popup":"popup.html"
    },
    "options_page":"options.html",
    "background":{
        "scripts": ["eventPage.js"],
        "persistent": false
    },
    "permissions":[
        "storage",
        "notifications",
        "contextMenus"
    ]
}